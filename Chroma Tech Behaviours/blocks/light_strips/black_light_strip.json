{
	"format_version": "1.20.10",
	"minecraft:block": {
		"description": {
			"identifier": "chroma_tech:black_light_strip_block",
			"properties": {
				"chroma_tech:edge_north": [false, true],
				"chroma_tech:edge_south": [false, true],
				"chroma_tech:edge_east": [false, true],
				"chroma_tech:edge_west": [false, true],
				"chroma_tech:extend_north": [false, true],
				"chroma_tech:extend_south": [false, true],
				"chroma_tech:extend_east": [false, true],
				"chroma_tech:extend_west": [false, true]
			},
			"menu_category": {
				"category": "none",
				"is_hidden_in_commands": true
			},
			"traits": {
				"minecraft:placement_position": { "enabled_states": ["minecraft:block_face"] }
			},
			"is_experimental": true
		},
		"permutations": [
			{
				"condition": "q.block_property('minecraft:block_face') == 'up'",
				"components": { "minecraft:transformation": { "rotation": [0,180,0] }}
			},
			{
				"condition": "q.block_property('minecraft:block_face') == 'down'",
				"components": { "minecraft:transformation": { "rotation": [0,0,180] }}
			},
			{
				"condition": "q.block_property('minecraft:block_face') == 'north'",
				"components": { "minecraft:transformation": { "rotation": [90,180,0] }}
			},
			{
				"condition": "q.block_property('minecraft:block_face') == 'south'",
				"components": { "minecraft:transformation": { "rotation": [90,0,180] }}
			},
			{
				"condition": "q.block_property('minecraft:block_face') == 'east'",
				"components": { "minecraft:transformation": { "rotation": [180,0,90] }}
			},
			{
				"condition": "q.block_property('minecraft:block_face') == 'west'",
				"components": { "minecraft:transformation": { "rotation": [180,0,270] }}
			}
		],
		"components": {
			"minecraft:geometry": {
				"identifier": "geometry.light_strip",
				"bone_visibility": {
					"north": "q.block_property('chroma_tech:edge_north') || q.block_property('chroma_tech:extend_north')",
					"south": "q.block_property('chroma_tech:edge_south') || q.block_property('chroma_tech:extend_south')",
					"east": "q.block_property('chroma_tech:edge_east') || q.block_property('chroma_tech:extend_east')",
					"west": "q.block_property('chroma_tech:edge_west') || q.block_property('chroma_tech:extend_west')",
					"edge_north": "q.block_property('chroma_tech:edge_north')",
					"edge_south": "q.block_property('chroma_tech:edge_south')",
					"edge_east": "q.block_property('chroma_tech:edge_east')",
					"edge_west": "q.block_property('chroma_tech:edge_west')",
					"extend_north": "q.block_property('chroma_tech:extend_north')",
					"extend_south": "q.block_property('chroma_tech:extend_south')",
					"extend_east": "q.block_property('chroma_tech:extend_east')",
					"extend_west": "q.block_property('chroma_tech:extend_west')"
				}
			},
			"minecraft:light_emission": 15,
			"minecraft:collision_box": false,
			"minecraft:selection_box": {
				"origin": [-8, 0, -8],
				"size": [16, 1, 16]
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "black",
					"ambient_occlusion": false,
					"face_dimming": false,
					"render_method": "opaque"
				}
			},
			"minecraft:loot": "loot_tables/blocks/light_strips/black_light_strip.json",
			"minecraft:placement_filter": {
				"conditions": [{ "block_filter": [{ "tags": "!q.any_tag('light_strip')" }] }]
			},
			"minecraft:light_dampening": 0,
			"tag:light_strip": {}
		}
	}
}