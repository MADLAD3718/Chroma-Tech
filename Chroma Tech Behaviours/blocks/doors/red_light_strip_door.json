{
    "format_version": "1.20.10",
    "minecraft:block": {
        "description": {
            "identifier": "chroma_tech:red_light_strip_door_block",
            "properties": {
                "chroma_tech:open": [false, true],
                "chroma_tech:top": [false, true],
                "chroma_tech:flipped": [false, true]
            },
            "menu_category": {
				"category": "none",
				"is_hidden_in_commands": true
			},
            "traits": {
                "minecraft:placement_direction": { "enabled_states": ["minecraft:cardinal_direction"] }
            },
			"is_experimental": true
        },
        "permutations": [
            {
                "condition": "q.block_property('chroma_tech:top')",
                "components": { "minecraft:geometry": { "identifier": "geometry.light_strip_door_top" } }
            },
            {
                "condition": "q.block_property('minecraft:cardinal_direction') == 'south'",
                "components": { "minecraft:transformation": { "rotation": [0, 180, 0] } }
            },
            {
                "condition": "q.block_property('minecraft:cardinal_direction') == 'east'",
                "components": { "minecraft:transformation": { "rotation": [0, 270, 0] } }
            },
            {
                "condition": "q.block_property('minecraft:cardinal_direction') == 'west'",
                "components": { "minecraft:transformation": { "rotation": [0, 90, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open')",
                "components": { "minecraft:transformation": { "rotation": [0, 270, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open') && q.block_property('minecraft:cardinal_direction') == 'south'",
                "components": { "minecraft:transformation": { "rotation": [0, 90, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open') && q.block_property('minecraft:cardinal_direction') == 'east'",
                "components": { "minecraft:transformation": { "rotation": [0, 180, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open') && q.block_property('minecraft:cardinal_direction') == 'west'",
                "components": { "minecraft:transformation": { "rotation": [0, 0, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open') && q.block_property('chroma_tech:flipped')",
                "components": { "minecraft:transformation": { "rotation": [0, 90, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open') && q.block_property('chroma_tech:flipped') && q.block_property('minecraft:cardinal_direction') == 'south'",
                "components": { "minecraft:transformation": { "rotation": [0, 270, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open') && q.block_property('chroma_tech:flipped') && q.block_property('minecraft:cardinal_direction') == 'east'",
                "components": { "minecraft:transformation": { "rotation": [0, 0, 0] } }
            },
            {
                "condition": "q.block_property('chroma_tech:open') && q.block_property('chroma_tech:flipped') && q.block_property('minecraft:cardinal_direction') == 'west'",
                "components": { "minecraft:transformation": { "rotation": [0, 180, 0] } }
            }
        ],
        "components": {
            "minecraft:geometry": { "identifier": "geometry.light_strip_door" },
            "minecraft:selection_box": {
                "origin": [-8, 0, 6],
                "size": [16, 16, 2]
            },
            "minecraft:collision_box": {
                "origin": [-8, 0, 6],
                "size": [16, 16, 2]
            },
            "minecraft:material_instances": {
				"*": {
					"texture": "red",
					"ambient_occlusion": false,
					"face_dimming": false,
					"render_method": "opaque"
				}
			},
            "minecraft:placement_filter": { "conditions": [ { "allowed_faces": ["up"] } ] },
            "minecraft:on_interact": { "event": "chroma_tech:interact" },
			"minecraft:loot": "loot_tables/blocks/doors/red_light_strip_door.json",
            "minecraft:light_emission": 15,
            "minecraft:light_dampening": 0,
            "tag:light_strip_door": {}
        },
        "events": { "chroma_tech:interact": {} }
    }
}